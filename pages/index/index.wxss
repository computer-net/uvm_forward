/* pages/index.wxss */

/* 每个页面外面都有一个 page 组件 */
page { 
  background-color: #b3d4db;
}

.l-avatar {
  margin-top: 160rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
  overflow:hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.motto {
  margin-top: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.journey-container {
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 10%;
  text-align: center;
  margin-top: 200rpx;
}

.journey {
  font-size: 22rpx;
  color: #405f80;
  line-height: 80rpx;
  font-weight: bold;
}